{
    "dev":{
        "baseDir":"src/",
        "less":"src/assets/less/",
        "css":"src/assets/css/",
        "images":"src/assets/images/",
        "js":"src/assets/js/",
        "html":"src/html/"
    },
    "build":{
        "baseDir":"build/",
        "css":"build/assets/css/",
        "images":"build/assets/images/",
        "js":"build/assets/js/",
        "html":"build/html/"
    },
    "uglify":{
        "compress":false,
        "filter":["!src/assets/js/lib/*js"]
    }, 
    "cleanCss":{
        "compress":true,
        "options":{"compatibility": "ie8"},
        "base64":{
            "maxImageSize": 9000,
            "debug": true
        }
    },
    "px2rem":{
        "open":true,
        "options":{
            "baseDpr": 2, 
            "threeVersion": false, 
            "remVersion": true, 
            "remUnit": 75,
            "remPrecision": 6
          }
    },
    "zip":{
        "name":"minisite.zip"
    }
}